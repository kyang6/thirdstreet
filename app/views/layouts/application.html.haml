!!! 5
%html
%head
	%title 3RD Street
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	= csrf_meta_tags
%body
	%nav.navbar.navbar-default{role: "navigation"}
		#tab
			.navbar-brand 
				= link_to "3rd Street", root_path ,{class: "header"}
		%nav.navbar-nav.navbar-right
			- if user_signed_in?
				%ul.nav.navbar-nav.navbar-right
					%li.nav= link_to "My Profile", current_user
					%li.nav= link_to "Sign Out", destroy_user_session_path, method: :delete
					
			- else
				%ul.nav.navbar-nav.navbar-right
					%li.nav= link_to "PI Sign In", new_user_session_path

		
		
				

	.container
		- flash.each do |name, msg|
			= content_tag :div, msg, class: "alert"
		= yield
	
	%footer
		%h5.footer Site developed Stanford Silicon Classroom




